{% set assetBundleClass = 'convergine\\socialbuddy\\assets\\BuddyAssets' %}
{% do view.registerAssetBundle(assetBundleClass) %}
{% set assetBundle = view.getAssetManager().getBundle(assetBundleClass) %}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connected!</title>
    <style>
        body {
            background-color: #FFFFFF;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card-container {
            width: 650px;
            height: 483px;
            background-color: #FFFFFF;
            border-radius: 32px;
            padding: 80px;
            box-shadow: 0 4px 106.4px rgba(128, 128, 128, 0.1);
            text-align: center;
        }

        .icon {
            width: 107px;
            height: 107px;
            display: inline-block;
        }

        .checkmark {
            width: 28px;
            height: 28px;
            color: #0AA06E;
        }

        .header {
            font-family: 'Poppins', sans-serif;
            font-size: 24px;
            font-weight: 600;
            color: #3E4359;
            margin-bottom: 16px;
        }

        .description {
            font-family: 'Poppins', sans-serif;
            font-size: 18px;
            color: #4A6F8A;
        }

        .button {
            padding: 12px 48px;
            border-radius: 24px;
            font-family: 'Poppins', sans-serif;
            font-size: 14px;
            font-weight: 600;
            color: #FFFFFF;
            background: linear-gradient(to right, #E42A5A, #CA1A8A);
            border: none;
            cursor: pointer;
            margin-top: 20px;
        }

        .button:hover {
            opacity: 0.9;
        }

        .icon-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 20px;
        }

        .horizontal-line {
            width: 60px;
            height: 5px;
            background-color: #F0F0F0;
            border-radius: 2px;
            margin: 0 0px;
        }
    </style>
</head>
<body>

    <div class="card-container">
 <div class="icon-container">
            <img src="{{ assetBundle.baseUrl }}/images/{{socialMediaIcon}}" alt="Social Media Icon" class="icon" style="margin-right: 10px;">
            <div class="horizontal-line"></div>
            <img src="{{ assetBundle.baseUrl }}/images/checkmark.svg" alt="Checkmark" class="checkmark">
            <div class="horizontal-line"></div>
            <img src="{{ assetBundle.baseUrl }}/images/icon2.svg" alt="Icon 2" class="icon" style="margin-left: 10px;">
        </div>

        <div class="header">Connected</div>
        
        <div class="description">Your {{socialMediaName}} has been connected to Social Media Plugin App. Now you can close this page</div>
        
        <button class="button" onclick="document.location='{{linkBack}}'">Close</button>
    </div>

</body>
</html>